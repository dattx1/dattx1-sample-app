<% if object.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-danger">
    <%= t "error_page_description", message: pluralize(object.errors.count, t("error_page_error_message")) %>
    </div>
    <ul>
    <% object.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>
