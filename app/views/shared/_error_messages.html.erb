<% if @user.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-danger">
    <%= t "error_page_description", message: pluralize(@user.errors.count, t("error_page_error_message")) %>
    </div>
    <ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>
